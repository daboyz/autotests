<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Lifecycle tests" parallel="false" thread-count="2">

    <test name="Lifecycle test run on Firefox">

        <parameter name="browser" value="firefox" />

        <classes>
            <class name="testcases.CreateAndLaunchEC2FarmSuccess" />
            <class name="testcases.StopFarmSuccess" />
            <class name="testcases.LoginUserSuccess" />
            <class name="testcases.LoginUserFailure" />
        </classes>
    </test>

    <test name="Lifecycle test run on Chrome">

        <parameter name="browser" value="chrome" />

        <classes>
            <class name="testcases.CreateAndLaunchEC2FarmSuccess" />
            <class name="testcases.StopFarmSuccess" />
            <class name="testcases.LoginUserSuccess" />
            <class name="testcases.LoginUserFailure" />
        </classes>
    </test>

</suite>